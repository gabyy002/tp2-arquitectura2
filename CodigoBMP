#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BMP280.h> 

#define SDA_PIN D1
#define SCL_PIN D2

Adafruit_BMP280 bmp;

void setup() {
  Serial.begin(115200);
  Wire.begin(SDA_PIN, SCL_PIN);

  Serial.println("Detectando BMP280...");

  // Intentar dirección 0x76, luego 0x77
  if (!bmp.begin(0x76)) {
    if (!bmp.begin(0x77)) {
      Serial.println("⚠️ No se encontró el BMP280. Verificá conexiones!");
      while(1);
    }
  }
  Serial.println("BMP280 detectado correctamente!");
}

void loop() {
  Serial.print("Temperatura = ");
  Serial.print(bmp.readTemperature());
  Serial.println(" °C");

  Serial.print("Presión = ");
  Serial.print(bmp.readPressure() / 100.0F);
  Serial.println(" hPa");

  Serial.println();
  delay(2000);
}
